<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/orange">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Where are you going?"
            android:id="@+id/question1"
            android:layout_marginTop="99dp" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>


        <EditText
                android:id="@+id/search_query"
                android:layout_width="0dip"
                android:layout_height="40dip"
                android:hint="Stop number or Destination"
                android:textSize="8pt"
                android:layout_alignStart="@+id/question1"
                android:layout_alignEnd="@+id/question1"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/question1" android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="true" android:layout_alignParentStart="true"
                android:layout_marginLeft="20pt"
                android:paddingLeft="5pt"
                android:layout_marginRight="20pt"
                android:layout_weight="1"
                android:singleLine="true"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/cursor"/>

        <TextView
                android:layout_width="1dip"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:paddingLeft="10dip" />

        <ImageButton
                android:id="@+id/search_icon"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:background="@drawable/button_pressed_background"
                android:paddingBottom="5dip"
                android:paddingLeft="5dip"
                android:paddingRight="10dip"
                android:paddingTop="5dip"
                android:src="@drawable/search_icon" android:layout_alignTop="@+id/search_query"
                android:layout_alignEnd="@+id/search_query"/>

</RelativeLayout>

